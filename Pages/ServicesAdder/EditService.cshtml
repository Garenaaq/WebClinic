@model MedicalService;

@{
    ViewData["Title"] = "Редактирование услуг";
}

<a class="btn btn-primary" asp-action="ActiveServices">Назад</a>
<div class="mt-3">
    <form asp-action="EditService" asp-route-flag=@Model.DeleteFlag method="post">
        <div>
            <p>
                <label name="NameService">Название услуги</label>
                <input class="form-control" required name="NameService" asp-for=@Model.NameService />
            </p>
            <p>
                <label name="FkSpeciality">Категория</label>
                <select name="FkSpeciality" asp-for=@Model.FkSpeciality asp-items="ViewBag.Specialities"></select>
            </p>
            <p>
                <label name="Price">Цена</label>
                <input class="form-control" required name="Price" asp-for=@Model.Price type="number" />
            </p>
            <p>
                <label name="Description">Описание услуги</label>
                <textarea class="form-control" name="Description" asp-for=@Model.Description></textarea>
            </p>
            <p>
                <input class="btn btn-primary" type="submit" value="Обновить" />
            </p>
        </div>
    </form>
</div>