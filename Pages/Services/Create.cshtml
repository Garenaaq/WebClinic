@page
@model Services.CreateModel

<ul class="nav nav-tabs" id="tab-example" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="second-tab" data-toggle="tab" role="tab" aria-controls="second-tab-content"
           aria-selected="false" asp-action="Index">Добавить услугу</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="second-tab" data-toggle="tab" role="tab" aria-controls="second-tab-content"
           aria-selected="false" asp-action="ActiveServices">Активные услуги</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="second-tab" data-toggle="tab" role="tab" aria-controls="second-tab-content"
           aria-selected="false" asp-action="Inactive">Архив услуг</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="first-tab" data-toggle="tab" role="tab" aria-controls="first-tab-content"
           aria-selected="true" asp-action="AdminMenu" asp-controller="Admin">Назад в меню</a>
    </li>
</ul>
<div class="mt-3">
    <form asp-action="AddService">
        <div>
            <p>
                <label name="NameService">Название услуги</label>
                <input class="form-control" required name="NameService" />
            </p>
            <p>
                <label name="FkSpeciality">Категория</label>
                <select name="FkSpeciality" asp-items="@Model.specialities"></select>
            </p>
            <p>
                <label name="Price">Цена</label>
                <input class="form-control" required name="Price" type="number" />
            </p>
            <p>
                <label name="Description">Описание услуги</label>
                <textarea class="form-control" name="Description"></textarea>
            </p>
            <p>
                <input class="btn btn-primary" type="submit" value="Создать" />
            </p>
        </div>
    </form>
</div>