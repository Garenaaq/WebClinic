@model List<DiseaseHistory>;

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="flex-column flex-shrink-0 p-3 bg-light">
                <span class="fs-4">Пациент</span>
                <hr>
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item">
                        <a asp-action="Index" class="nav-link link-dark" aria-current="page">
                            <svg class="bi pe-none me-2" width="16" height="16">
                                <use xlink:href="#home"></use>
                            </svg>Медицинская карта
                        </a>
                    </li>
                    <li>
                        <a asp-action="ActiveRecords" class="nav-link active">
                            <svg class="bi pe-none me-2" width="16" height="16">
                                <use xlink:href="#speedometer2"></use>
                            </svg>Заказы
                        </a>
                    </li>
                    <li>
                        <a asp-action="Settings" class="nav-link link-dark">
                            <svg class="bi pe-none me-2" width="16" height="16">
                                <use xlink:href="#table"></use>
                            </svg>Настройки
                        </a>
                    </li>
                </ul>
                <hr>
            </div>
        </div>
        <div class="col-md-8">
            @if (Model is null)
            {
                <p>Записей нет</p>
            }
            else
            {
                foreach (var record in Model)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Пациент @record.FkPatientNavigation.Surname @record.FkPatientNavigation.Name @record.FkPatientNavigation.Patronymic</h5>
                            <p class="card-text">Дата рождения: @record.FkPatientNavigation.Birthdate.Value.ToLongDateString() (@(DateTime.Today.Year - record.FkPatientNavigation.Birthdate.Value.Year) лет)</p>
                            <p class="card-text">@record.FkPatientNavigation.Gender</p>
                            <p class="card-text">Номера телефонов:</p>
                            @foreach (var phone in record.FkPatientNavigation.FkUsersNavigation.Phonebooks.ToList())
                            {
                                <p class="card-text">7 @phone</p>
                            }
                            @if (record.DateRecord is null)
                            {
                                <p class="card-text">Время не назначено</p>
                            }
                            else
                            {
                                <p class="card-text">Время посещения @record.DateRecord.Value</p>
                            }
                            <form method="post" asp-action="EditOrder" asp-controller="Record" asp-route-id="@record.Id">
                                <div class="form-group">
                                    <input type="time" name="Time" class="form-control">
                                </div>
                                <div class="form-group">
                                    <input type="date" name="Date" class="form-control">
                                </div>
                                <button type="submit" class="btn btn-primary">Изменить время</button>
                            </form>
                            <form method="post" asp-action="FinishOrder" asp-controller="Record" asp-route-id="@record.Id">
                                <button type="submit" class="btn btn-success">Поставить диагноз</button>
                            </form>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
